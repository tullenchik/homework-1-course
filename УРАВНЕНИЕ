//Для любых введенных с клавиатуры b и c решить уравнение вида bx + c =0
using namespace std;//пространство имен стд
#include <iostream>//библиотека для вывода в консоль
#include <cstdlib>
int main()
{
	setlocale(0, "");//русификация консоли
	float c, b;
	cout << "Здравуствуй, Пользователь!Из уравнения bx+c=0 введите перменную b" << endl;
	cin >> b;//ввод данных переменных
	if (!cin) {//проверка на дурака
		cout << "Ввод неправилен" << endl;
		return 0;
	}
	cout << "Введите переменную с" << endl;
	cin >> c;//ввод данных переменных
	if(!cin){//проверка на дурака
		cout << "Ввод неправилен" << endl;
		return 0;
	}
	if ((b == 0) && (c == 0)) {//4 варианта наборов чисел
		cout << "Решение уравнения любое число ";
		return 0;
	}
	if ((b == 0) && (c != 0)) {
		cout << "Решений нет" << endl;
		return 0;
	}
	if ((b != 0) && (c == 0)) {
		cout << "Решние уравнения 0";
		return 0;
	}
	if ((b != 0) && (c != 0)) {
		cout << "Решние уравнения " << -1*c/ b << endl;
		return 0;
	}
	return 0;
}
